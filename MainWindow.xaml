<Window x:Class="EuroGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EuroGUI" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" SelectionMode="Single" SelectionUnit="FullRow" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Év" Binding="{Binding Ev}" />
                <DataGridTextColumn Header="Előadó" Binding="{Binding Eloado}" />
                <DataGridTextColumn Header="Cím" Binding="{Binding Cim}" />
                <DataGridTextColumn Header="Helyezés" Binding="{Binding Helyezes}" />
                <DataGridTextColumn Header="Pontszám" Binding="{Binding Pontszam}" />
            </DataGrid.Columns>
        </DataGrid>

        <Button Content="4. feladat" Click="OnButton4Click" />
        <Button Content="5. feladat" Click="OnButton5Click" />
        <Button Content="6. feladat" Click="OnButton6Click" />
        <Button Content="7. feladat" Click="OnButton7Click" />
        <Button Content="8. feladat" Click="OnButton8Click" />

        <ListBox x:Name="listBox" />
        <TextBox x:Name="textBox" />

        <Label x:Name="label" Content="Verseny dátuma: " />
    </Grid>
</Window>